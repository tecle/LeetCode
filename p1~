#include<iostream>
#include<string>
using namespace std;


void deal(string &str){
	int slen=str.size();
	int store[256]={0};
	int i=0;
	for(i=0;i<slen;i++){
		if(str[i]<'0' || (str[i]>'9' && str[i]<'a') || str[i]>'z'){
			cout<<"<invalid input string>"<<endl;
			return;
		}
		store[str[i]]++;
	}
	bool stop=false;
	string ans="";
	while(!stop){
		stop = true;
		//travel once
		for(i=0;i<256;i++){
			if(store[i]>0){
				cout<<i<<endl;
				ans.append(1,(char)i);
				store[i]--;
				stop =false;
			}
		}
	}
	cout<<ans<<endl;

}

int main(){
	string str;
	while(cin>>str){
		deal(str);
	}
}
